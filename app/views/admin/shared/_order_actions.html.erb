<%= link_to_if order.address?, "Согласовать", fire_admin_order_path(:id => order, :e => :next), :method => :put  do %>
<% end %>
<br/>
<%= link_to_if order.complete?, "Выгрузить", fire_admin_order_path(:id => order, :e => :next), :method => :put do %>
<%end%>

<%= link_to_if order.complete? && current_user.has_role?(:admin), "Удалить", admin_order_path(order.id), :method => :delete, :confirm => t("are_you_sure") do %>
<% end %>

<% if order.methods.grep('processed?').size == 1%>

<%= link_to_if order.export?, "Обработать", fire_admin_order_path(:id => order, :e => :next), :method => :put do %>
<% end %>
<%= link_to_if order.processed? && current_user.has_role?(:admin), "Удалить", fire_admin_order_path(:id => order, :e => :next), :method => :put, :confirm => t("are_you_sure") do %>
<% end %>
<%else%>
  <%= link_to_if order.export? && current_user.has_role?(:admin), "Удалить", fire_admin_order_path(:id => order, :e => :next), :method => :put, :confirm => t("are_you_sure") do %>
<% end %>
<%end%>
